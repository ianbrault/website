extends base.jade

block content
    section#about
        svg#about-header.section-header(viewBox="0 0 200 32")
            polyline#wire1
            polyline#wire2
            polyline#wire3
            polyline.text-bg(points="59 0 118 0 114 16 50 16")
            text(x="60", y="12", font-size="16") about
        div.content
            div.about-img-border-wrapper
                div.about-img-border-left
                div.about-img-border-right
                div.about-img-border-top
                div.about-img-border-bottom
                img.about-img(src="/img/about.jpg")
